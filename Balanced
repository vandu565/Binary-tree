class pair{
  public:
    int height;
     bool bal;
};
pair isbal(BinaryTreeNode<int> *root) {
    if(root==NULL)
    {pair ans;
     ans.height=0;
     ans.bal=trure
        return ans;}
    pair s=isBalanced(root->left);
    pair k=isBalanced(root->right);
    if(s.bal==true && k.bal==true;)
    {
        if((s.height-k.height)<=1)
            ans.height=1+max(s.hight,k.height);
            ans.bal=true;
            
            return ans;
    }
    else
    { ans.height=1+max(s.hight,k.height);
            ans.bal=false;
        
     return ans;}
}
    
 bool isBalanced(BinaryTreeNode<int> *root) {  
     if(root==NULL)
     {return true;}
     pair s=isbal(root);
     return s.bal;
 }
